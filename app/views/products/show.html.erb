
<div class='row'>
	<div class='span6 offset3'>
		<div class="well">
        <p>

          <%= @prod.title %>
        </p>

        <p><%= @prod.description %></p>
        
        <p>
            <%= image_tag(@prod.image(:medium), :class => 'list_image' ) %>
        </p>

        <p>

          <%= number_to_currency(@prod.price) %>
        </p>
        
        <p><%= link_to 'Edit', edit_product_path(@prod) %> |
            <%= link_to 'Back', products_path %></p>
        <p>
            
        <%= button_to 'Add to Cart', line_items_path(:product_id => @prod), :class => 'btn btn-primary' %>
    </p>
       
	</div>
	</div>
</div>
    



