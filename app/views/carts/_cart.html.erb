
<h4 >Your Cart</h4>
	<table class='table'>
		<%= render(cart.line_items) %>
		<tr class="total_line" >
			<td colspan="" >Total</td>
			<td class="total_cell" ><%= number_to_currency(cart.total_price) %></td>
		</tr>
		<tr class='form-actions'><td><%= button_to 'Empty cart' , cart_path, :method => :delete, :confirm => 'Are you sure?', :class => 'btn-inverse' %></td>
			<td><%= button_to "Checkout" , new_order_path, :method => :get, :class => 'btn btn-primary' %></td>
		</tr>
	</table>
	